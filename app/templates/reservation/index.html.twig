{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Yacht</th>
                <th>From - To</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.yacht }}</td>
                <td><b>{{ reservation.startTime | date("Y-m-d") }}</b> - <b>{{ reservation.endTime | date("Y-m-d") }}</b>, {{ reservation.days }} days</td>
                <td>
                    <u title="{{ reservation.yacht.pricePerDay }} € x {{ reservation.days }} days">{{ reservation.totalPrice }} €</u>
                </td>
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('yacht_index') }}">Find a yacht to book</a>
{% endblock %}
