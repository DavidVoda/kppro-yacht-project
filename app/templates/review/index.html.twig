{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}
    <h1>Reviews</h1>



    <table class="table">
        <thead>
            <tr>
                <th>Yacht</th>
                <th>User</th>
                <th>Text</th>
                <th>Rating</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.yacht }}</td>
                <td>{{ review.user }}</td>
                <td>{{ review.text }}</td>
                <td>{{ review.rating }}</td>
                <td>
                    <a class="btn btn-dark" href="{{ path('review_show', {'id': review.id}) }}">Detail</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-danger" href="{{ path('review_edit', {'id': review.id}) }}">Edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('review_new') }}">Create new</a>
{% endblock %}
