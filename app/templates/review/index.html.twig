{% extends 'base.html.twig' %}

{% block title %}Yacht reviews{% endblock %}

{% block body %}
    <h1>Reviews</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Yacht</th>
            <th>User</th>
            <th>Text</th>
            <th>Rating</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>actions</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.yacht }}</td>
                <td>{{ review.user }}</td>
                <td>{{ review.text }}</td>
                <td>{{ review.rating }}</td>
                <td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-danger" href="{{ path('review_edit', {'id': review.id}) }}">Edit</a>
                        <a class="btn btn-danger" href="{{ path('review_delete', {'id': review.id}) }}">Delete</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
