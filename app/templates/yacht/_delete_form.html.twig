<div class="row mt-2">
    <form method="post" action="{{ path('yacht_delete', {'id': yacht.id}) }}"
          onsubmit="return confirm('Are you sure you want to delete this yacht - {{ yacht.name }}?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ yacht.id) }}">
        <button class="btn btn-danger">Delete</button>
    </form>
</div>
